set ssl_starttls=yes
set ssl_force_tls=yes
unset imap_passive
set header_cache=~/.mutt/hcache
set message_cachedir=~/.mutt/mcache
set reverse_name
set send_charset="utf-8:iso-8859-1"
set charset="utf-8"
set certificate_file=~/.mutt/certificates
set editor = "jed"
set imap_user = "enno"
set smtp_url = "smtp://enno@mail.kn-bremen.de:587/"
set from = "enno@twigtechnology.com"
alternates "enno@eressea.de|enno@kn-bremen.de"
set realname = "Enno Rehling"
#set imap_check_subscribed
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set move = no
set copy = yes
set postpone = ask-no
set recall = ask-no

set folder = "imaps://mail.kn-bremen.de:993"
set spoolfile = "+INBOX"
set record = "+Sent"
set postponed = "+Drafts"
set mbox = "+Archives"

source .mutt/password.rc
source .mutt/gpg.rc

set crypt_autosign

alias enno_at_eressea Enno Rehling <enno@eressea.de>
alias enno_at_twigtech Enno Rehling <enno@twigtechnology.com>
alias enno_at_knbremen Enno Rehling <enno@kn-bremen.de>

macro compose v "<edit-from>^Uenno_at_<tab>" "Select from"
macro index j "<save-message>=Junk<enter>"
macro index a "<save-message>=Archives<enter>"

send-hook "~t eressea-design" "set from='Enno Rehling <enno@eressea.de>'"
send-hook "~t eressea\.de" "set from='Enno Rehling <enno@eressea.de>'"
